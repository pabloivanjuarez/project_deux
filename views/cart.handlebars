{{!-- Beginning of shopping cart --}}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center m-2">Shopping Cart</h2>
        </div>
    </div>

{{!-- If there's data in the carts table, it will populate here --}}
    {{#if carts}}
    <div class="row">
        <div class="col-md-12">
        <div class="table-responsive">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" style="width:5%"></th>
                        <th scope="col" style="width:5%"></th>
                        <th scope="col" style="width:20%"></th>
                        <th scope="col" style="width:20%">Product</th>
                        <th scope="col" style="width:20%">Price</th>
                        <th scope="col" style="width:15%">QTY</th>
                        <th scope="col" style="width:15%">Total</th>
                    </tr>
                </thead>
                <tbody>
                {{#each carts}}
                <tr>
                    <th scope="row">
                        <form class="delete-item" data-id={{Product.id}}>
                            <button class="btn btn-danger" type="submit" value="Submit">Remove</button>
                        </form>
                    </th>
                    <td><a href="/products/{{Product.id}}" class="btn btn-primary" role="button">View</a></td>
                    <td><img class="img-thumbnail" src="{{Product.img}}" alt="{{Product.name}}"></td>
                    <td>{{Product.name}}</td>
                    <td class="product-price" data-price={{Product.price}}>${{Product.price}}</td>
                    <td>
                        <form class="update-quantity" data-id={{Product.id}}>
                            <div class="form-group">
                                <select class="form-control itemQty" style="width:50%">
                                    <option selected>{{quantity}}</option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                </select>
                            </div>
                                <button class="btn btn-secondary btn-sm float-left" type="submit" value="Submit">Update QTY</button>
                        </form>
                    </td>
                    <td class="item-price"></td>
                </tr>
                {{/each}}
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>Grand Total: </td>
                    <td class="grand-total"></td>
                </tr>
            </tbody>
        </table>
        </div>
        </div>
    </div>

{{!-- If there are no items in the carts table, a message will display here --}}
    {{else}}
    <div class="row">
        <div class="col-md-12 d-flex justify-content-center">
            <p>There are no items in your cart.</p>
        </div>
    </div>
    {{/if }}

    <div class="row">
        <div class="col-md-12 d-flex justify-content-center mb-3">
            {{#if carts}}
            <a href="#" class="btn btn-primary">Checkout</a>
            {{else}}
            <a href="/products" class="btn btn-primary">Shop</a>
            {{/if}}
        </div>
    </div>
</div>

<script src="./assets/js/cart.js"></script>