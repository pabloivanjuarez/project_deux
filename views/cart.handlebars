<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Shopping Cart</h2>
        </div>
    </div>

    {{#if carts}}
<div class="table-responsive">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col" style="width:5%"></th>
                <th scope="col" style="width:20%"></th>
                <th scope="col" style="width:20%">Product</th>
                <th scope="col" style="width:20%">Price</th>
                <th scope="col" style="width:15%">QTY</th>
                <th scope="col" style="width:20%">Remove from Cart</th>
            </tr>
        </thead>
        <tbody>
            {{#each carts}}
            <tr>
                <th scope="row"><a href="/products/{{Product.id}}" class="btn btn-primary" role="button">View</a></th>
                <td><img class="img-thumbnail" src="{{Product.img}}" alt="{{Product.name}}"></td>
                <td>{{Product.name}}</td>
                <td>${{Product.price}}</td>
                <td>                
                    <form class="update-quantity" data-id={{Product.id}}>
                        <div class="form-group">
                            <select class="form-control">
                                <option selected>{{quantity}}</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                        <button class="btn btn-default" type="submit" value="Submit">Update Quantity</button>
                    </form>
                </td>
                <td>                
                    <form class="delete-item" data-id={{Product.id}}>
                        <div class="form-group">
                            <button class="btn btn-danger" type="submit" value="Submit">Remove</button>
                        </div>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
    
    {{else}}
        <p>There are no items in your cart.</p>
    {{/if }}

    <div class="row">
        <div class="col-md-12 d-flex justify-content-center">
            {{#if carts}}
            <a href="#" class="btn btn-primary">Checkout</a>
            {{else}}
            <a href="/products" class="btn btn-primary">Shop</a>
            {{/if}}
        </div>
    </div>
</div>


<script src="./assets/js/cart.js"></script>